{% extends 'base.html.twig' %}

{% block title %}- Liste des évènements{% endblock %}

{% block body %}

<div class="container">
    <div class="table-responsive-xl">
        <table>
            <thead>
                <tr>
                    <th colspan="1">Nom</th>
                    <th colspan="1">Date</th>
                    <th colspan="1">Log</th>
                </tr>
            </thead>
            <tbody>
                {% for event in events |sort((b, a) => a.date <=> b.date) %}
                    <tr>
                        <td>
                            {% for raid in event.raid %}
                            {{ raid.name }}</br>
                            {% endfor %}
                        </td>
                        <td><a href="{{ path('app_event_read', {'id': event.id}) }}" title="Voir l'évènement">{{ event.date ? event.date|date('d M Y - H:i') : ''  }}</a></td>
                        <td><a href="{{ event.log }}" title="Voir les logs de l'évènement">Warcraftlogs</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
