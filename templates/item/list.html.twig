{% extends 'base.html.twig' %}

{% block title %}- Liste des items{% endblock %}

{% block body %}
{{ render(controller(
        'App\\Controller\\SearchController::searchBar'
 )) }}
 
<div class="container">
    <table>
        <thead>
            <tr>
                <th colspan="1">Item</th>
                <th colspan="1">Emplacement</th>
                <th colspan="1">Raid</th>
                <th colspan="1">Type</th>
                <th colspan="1">RÃ´le</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>
                        <a href="{{ path('app_item_show_by_slug', {'slug': item.slug}) }}">
                            {{item.name}}
                        </a>
                    </td>
                    <td>
                    {% for locations in item.locations %}
                        {{ locations.name }}</br>
                    {% endfor %}
                    </td>
                    <td>{{item.raid.name}}</td>
                    <td>{{item.type}}</td>
                    <td>
                            {% for role in item.role %}
                                {{ role.name }} 
                            {% endfor %}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}