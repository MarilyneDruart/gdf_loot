{% extends 'base.html.twig' %}

{% block title %}- raid{% endblock %}

{% block body %}
<div class="title">
    <h1>
        {# {{ raid.events.date ? raid.events.date|date('d M Y - H:i') : ''  }}</br> #}
        {{ raid.name }}
    </h1>
</div>
<div class="container">
    <div class="container">
        <table>
            <thead>
                <tr>
                    <th colspan="1">Dates</th>
                    <th colspan="1">Stats</th>
                </tr>
            </thead>
            <tbody>
                {% for events in raid.events %}
                <tr>
                    <td>
                        {{ events.date ? events.date|date('d M Y - H:i') : ''  }}</br>
                    </td>
                    <td></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<div class="bottom-button d-flex flex-wrap justify-content-evenly">
    <a class="bottom-button-update" href="{{ path('app_raid_update', {'id': raid.id}) }}">Modifier l'évènement</a>
    <a class="bottom-button-back" href="{{ path('app_raid_list') }}">Retour</a>
    {{ include('raid/_delete_form.html.twig') }}
</div>
{% endblock %}